---
import type { HTMLAttributes } from "astro/types";

import { getRootClassesx } from "~/components/classes";

type Props = HTMLAttributes<"svg"> & {
	size?: number;
};

const SIZE_DEFAULT = 500;

const [classes, { size = SIZE_DEFAULT, ...attrs }] = getRootClassesx(Astro.props);

const className = classes("root");
