---
import * as HOST from "~/utils/host";

import "~/styles/globals.css";

type Props = {
  title?: string;
  description?: string;
};

const TITLE_DEFAULT = "flamrdevs";
const DESCRIPTION_DEFAULT = "flamrdevs";

const { title = TITLE_DEFAULT, description = DESCRIPTION_DEFAULT } = Astro.props;
---

<html data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="icon" type="image/x-icon" href={HOST.STATIC("favicon.ico")} />

    <link rel="stylesheet" href={HOST.STATIC("stylesheets", "normalize.css")} />
    <link rel="stylesheet" href={HOST.STATIC("stylesheets", "fonts.css")} />

    <link rel="sitemap" href="/sitemap-index.xml">
  </head>
  <body>
    <slot />
  </body>
</html>
