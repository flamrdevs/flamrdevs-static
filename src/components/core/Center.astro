---
import type { HTMLAttributes } from "astro/types";

import propsplit from "propsplit";

import * as Reklass from "./Reklass";

import { getRootClassesx } from "./core";

type Props = HTMLAttributes<"div"> & Reklass.GapVariants & Reklass.MarginVariants & Reklass.PaddingVariants;

const [classes, props] = getRootClassesx(Astro.props);

const [gap, margin, padding, attrs] = propsplit(props, Reklass.splitter.gap, Reklass.splitter.margin, Reklass.splitter.padding);

const className = classes("flex items-center justify-center", Reklass.Gap(gap), Reklass.Margin(margin), Reklass.Padding(padding));
---

<div {...attrs} class={className}>
	<slot />
</div>
