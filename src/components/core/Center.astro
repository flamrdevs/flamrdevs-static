---
import type { HTMLAttributes } from "astro/types";

import * as Reklass from "./Reklass";

import { splitProps, getRootClassesx } from "./core";

type Props = HTMLAttributes<"div"> & Reklass.GapVariants & Reklass.MarginVariants & Reklass.PaddingVariants;

const [classes, props] = getRootClassesx(Astro.props);

const [gap, margin, padding, attrs] = splitProps(props, Reklass.splitter.gap, Reklass.splitter.margin, Reklass.splitter.padding);

const className = classes("root", Reklass.Gap(gap), Reklass.Margin(margin), Reklass.Padding(padding));
---

<div {...attrs} class={className}>
  <slot />
</div>

<style>
  .root {
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>
