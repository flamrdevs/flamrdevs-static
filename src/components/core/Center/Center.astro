---
import type { HTMLAttributes } from "astro/types";

import * as klass from "./../.klass";
import * as reklass from "./../.reklass";

import Box from "./../Box/Box.astro";

type Props = HTMLAttributes<"div"> & {
	inline?: boolean;
} & klass.TypographyVariants &
	reklass.LayoutVariants &
	reklass.PositionVariants &
	reklass.MarginVariants &
	reklass.PaddingVariants;

const { inline, disp = inline ? "iflex" : "flex", ai = "-:-", jc = "-:-", ...attrs } = Astro.props;
---

<Box disp={disp} ai={ai} jc={jc} {...attrs as any}>
	<slot />
</Box>
