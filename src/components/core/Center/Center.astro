---
import type * as Polymorphic from "./../../polymorphic";

import Box from "./../Box/Box.astro";
import type { BoxPolymorphicProps } from "./../Box/Box.types";

type Props<As extends Polymorphic.As = "div"> = BoxPolymorphicProps<As> & { inline?: boolean };

const { inline, disp = inline ? "iflex" : "flex", ai = "-:-", jc = "-:-", ...attrs } = Astro.props;
---

<Box {...{ disp, ai, jc }} {...attrs as any}>
	<slot />
</Box>
