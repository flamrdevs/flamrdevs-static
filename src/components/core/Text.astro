---
import type { HTMLAttributes } from "astro/types";

import * as TextKlass from "./Text.klass";

import { splitProps, getRootClassesx } from "./core";

type Props = HTMLAttributes<"div"> & TextKlass.Variants;

const [classes, props] = getRootClassesx(Astro.props);

const [recipe, attrs] = splitProps(props, ["inline", "family", "size", "weight", "align"]);

const className = classes(TextKlass.Root(recipe));
---

<div {...attrs} class={className}>
  <slot />
</div>
