---
import { HTMLX } from "~/components/index.ts";
import { Box, Container, Flex, Icon, IconButton, Separator } from "~/components/core/index.ts";

import Section from "./_ui/Section.tsx";
---

<HTMLX title="UI Core" description="core user interface">
	<Container max="lg" p="4">
		<Flex ai="-:-">
			<Box style={{ "flex-grow": "1" }} />
			<Separator orientation="vertical" style="height: 1.5rem" />
			<IconButton id="light-theme-icon-button">
				<Icon i="Sun" />
			</IconButton>
			<Separator orientation="vertical" style="height: 1.5rem" />
			<IconButton id="dark-theme-icon-button">
				<Icon i="Moon" />
			</IconButton>
		</Flex>
	</Container>

	<Container max="lg" p="4">
		<Section client:idle />
	</Container>
</HTMLX>

<script>
	import { changeTheme } from "~/stores/theme.ts";

	document.getElementById("light-theme-icon-button")!.addEventListener("click", () => {
		changeTheme("light");
	});
	document.getElementById("dark-theme-icon-button")!.addEventListener("click", () => {
		changeTheme("dark");
	});
</script>
